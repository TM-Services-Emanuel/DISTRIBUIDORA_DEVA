<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Actividades.Opciones_Mantenimiento">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color173545"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="OPCIONES DE MANTENIMIENTO"
            android:textColor="@color/white"
            android:textColorHighlight="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/settings" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <View
                android:id="@+id/divider44"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnEmpresa"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/store_shop"
                android:onClick="irListaEmpresa"
                android:text="SOBRE MI EMPRESA"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider46"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#375060"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="Gestión de comprobantes"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider47"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnTimbrado"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/newsletter"
                android:onClick="irListaTimbrado"
                android:text="SELECCIÓN DE TIMBRADO"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider48"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/id_btnPE"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/icontech"
                    android:onClick="irListaPE"
                    android:text="APLICAR PUNTO DE EMISIÓN"
                    android:textColor="#202020"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageButton
                    android:id="@+id/id_updatePE"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:minHeight="48dp"
                    app:srcCompat="@drawable/ic_descargarpcdark"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <View
                android:id="@+id/divider51"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#375060"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="Gestión de Ubicaciones"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <View
                android:id="@+id/divider52"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnDepartamento"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconfinder"
                android:onClick="irListaDepartamentos"
                android:text="LISTA DE DEPARTAMENTOS"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider53"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnCiudades"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconfinder"
                android:onClick="irListaCiudad"
                android:text="LISTA DE CIUDADES"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider54"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#375060"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="Gestión relacionada a productos"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <View
                android:id="@+id/divider55"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnDivision"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/checklist"
                android:onClick="irListaDivision"
                android:text="COMO SE CLASIFICAN LOS PRODUCTOS"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider56"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnIVA"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/payment"
                android:onClick="irListaIVA"
                android:text="IMPUESTOS AL VALOR AGREGADO"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider57"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnUM"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/um"
                android:onClick="irListaUM"
                android:text="UNIDADES DE MEDIDA"
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider58"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView106"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#375060"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="Respaldo"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider72"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/btn_servidor"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/globe"
                android:onClick="irServidor"
                android:text="DESIGNAR SERVIDOR EN LA NUBE (IP/DOMINIO)"
                android:textColor="#202020"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider76"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/id_btnSincronizarServidor"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/backup"
                android:text="ENVIAR DATOS DE FACTURACIONES AL SERVIDOR."
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider740"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <Button
                android:id="@+id/id_btnSincronizarClientes"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/backup"
                android:text="ENVIAR DATOS DE CLIENTES AL SERVIDOR."
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider741"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <Button
                android:id="@+id/id_btnSincronizarProductos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/backup"
                android:text="ENVIAR DATOS DE STOCK/PRODUCTOSAL SERVIDOR."
                android:textColor="#202020"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider742"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>